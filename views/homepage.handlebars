
<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <!-- main header -->
  <header class="header-container d-flex flex-column">
    <div class="main-header-group d-flex justify-content-center align-items-center">
      <img class="vault" src="/images/safe.png" alt="Picture of bank safe"/>
      <div class="d-flex flex-column mx-4" >
        <h1 class="main-header-top display-1 mb-0">Coin</h1>
        <h1 class="main-header-bottom display-1 mt-0">Vault</h1>
      </div>
    </div>
    <!-- secondary header -->
    <div>
      <h2 class="secondary-header">Buy and sell cryptocurrency without the risk!</h2>
    </div>
  </header>
  
  <!-- Login & Register Buttons -->
  <div class="buttons d-inline-flex justify-content-center">
    <!--Button to Login-->
    <button type="button" class="login-btn btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
    
    <!--  Login Modal -->
    <div class="modal fade login-modal" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Login</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="login-form needs-validation" novalidate>
              <div class="form-group">
                <label for="username" class="modal-labels">Username</label>
                <input type="username" class="form-control" id="username" placeholder="Username" required>
                <div class= "invalid-feedback">
                  Please enter a valid username.
                </div>
                
              </div>
              <div class="form-group">
                <label for="password" class="modal-labels">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" pattern=".{4,10}" required title="4 to 10 characters">
                <div class="invalid-feedback">
                  Please enter your password.
                </div>
              </div>
              <button type="submit" class="btn modal-btn d-block ms-auto mt-2" data-bs-dismiss="modal">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    
    <!--Button to Register-->
    <button type="button" class="register-btn btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
    
    <!-- Register Modal -->
    <div class="modal fade registerModal" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Register</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="register-form needs-validation" novalidate>
              <div class="form-group">
                <label for="username-1" class="modal-labels"> Please Choose a Username</label>
                <input type="username" class="form-control" id="username-1" placeholder="Username" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Please choose a username that includes 4-10 characters and symbols.
                </div>
              </div>
              <div class="form-group">
                <label for="email-1" class="modal-labels">Enter Your Email Address</label>
                <input type="email" class="form-control" id="email-1" aria-describedby="emailHelp" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Please enter a valid email address.
                </div>
              </div>
              <div class="form-group">
                <label for="password-1" class="modal-labels"> Please Choose a Password (4-10 Characters)</label>
                <input type="password" class="form-control" id="password-1" placeholder="Password" pattern=".{4,10}" required title="4 to 10 characters">
                <div class="valid-feedback">
                  Looks good!
                </div>
                <div class="invalid-feedback">
                  Please create a valid password that uses 4-10 characters.
                </div>
              </div>
              <button type="submit" class="btn modal-btn" data-dismiss="modal">Register</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
   


