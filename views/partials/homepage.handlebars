<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coin Vault</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body class=" d-flex justify-content-center align-items-center flex-column mt-5">
  
  <header class="header-container d-flex flex-column">
    <div class="main-header-group d-flex justify-content-center align-items-center">
      <img class="vault" src="/images/safe.png" alt="Picture of bank safe"/>
      <div class="d-flex flex-column mx-4" >
        <h1 class="main-header-top display-1 mb-0">Coin</h1>
        <h1 class="main-header-bottom display-1 mt-0">Vault</h1>
      </div>
    </div>
    
    <div>
      <h2 class="secondary-header m-5">Buy and sell cryptocurrency without the risk!</h2>
    </div>
  </header>
  
  <div class="buttons d-inline-flex justify-content-center">
    <!--Button to Login-->
    <button type="button" class="login-btn btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
    
    <!--  Login Modal -->
    <div class="modal fade login-modal" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Login</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="loginUsername" class="modal-labels">Username</label>
                <input type="username" class="form-control" id="login-username-input" placeholder="Username">
              </div>
              <div class="form-group">
                <label for="loginPassword" class="modal-labels">Password</label>
                <input type="password" class="form-control" id="login-password-input" placeholder="Password">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn modal-btn" data-bs-dismiss="modal">Login</button>
          </div>
        </div>
      </div>
    </div>
    
    <!--Button to Login-->
    <button type="button" class="register-btn btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#registerModal">Register</button>
    
    <!-- Register Modal -->
    <div class="modal fade registerModal" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Register</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="registerUsername" class="modal-labels"> Please Choose a Username</label>
                <input type="username" class="form-control" id="register-username-input" placeholder="Username">
              </div>
              <div class="form-group">
                <label for="registerEmail" class="modal-labels">Enter Your Email Address</label>
                <input type="email" class="form-control" id="register-email-input" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="registerPassword" class="modal-labels"> Please Choose a Password (6-10 Characters)</label>
                <input type="password" class="form-control" id="register-password-input" placeholder="Password">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn modal-btn" data-dismiss="modal">Register</button>
          </div>
        </div>
      </div>
    </div>
  </div>
   
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>